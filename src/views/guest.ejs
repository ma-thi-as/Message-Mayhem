                <span class="text-white font-medium  group-hover:text-black">Continue as anonymous</span>
            </button>

            <span class="mb-2 text-white">Or sing in as guest</span>
            <form id="login-form" method="post">
                <input  type="text" class="w-full px-6 py-3 mb-2 border border-slate-600 rounded-lg font-medium " placeholder="username" value=""/>
                <input type="password" class="w-full px-6 py-3 mb-2 border border-slate-600 rounded-lg font-medium " placeholder="password" value=""/>
                <button class="bg-gray-800 hover:bg-gray-900 text-white text-base rounded-lg py-2.5 px-5 transition-colors w-full ">Log In</button>
            </form>
          
        </div>
    </div>


<%- include('./components/modal') %>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/login.js"></script>

</body>
</html>

